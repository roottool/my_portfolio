{
	"name": "portfolio",
	"version": "1.0.0",
	"description": "My portfolio with Next.js using TypeScript.",
	"license": "MIT",
	"private": true,
	"author": {
		"name": "roottool",
		"url": "https://github.com/roottool"
	},
	"homepage": "https://roottool.vercel.app",
	"repository": {
		"type": "git",
		"url": "https://github.com/roottool/portfolio.git"
	},
	"bugs": {
		"url": "https://github.com/roottool/portfolio/issues"
	},
	"scripts": {
		"prepare": "is-ci || husky install",
		"clean": "rimraf .next .swc",
		"dev": "next dev",
		"build": "npm-run-all clean --parallel build:*",
		"build:next": "next build",
		"start": "next start",
		"lint": "run-s -c lint:*",
		"lint:prettier": "prettier --ignore-path=.gitignore --ignore-path=.prettierignore --check .",
		"lint:eslint": "eslint . --color --ext .js,.ts,.tsx",
		"format": "prettier --cache --ignore-path=.gitignore --ignore-path=.prettierignore --write .",
		"fix": "run-s -c format fix:*",
		"fix:eslint": "eslint . --fix --color --cache --ext .js,.ts,.tsx",
		"typecheck": "tsc --noEmit",
		"test": "run-s -c test:vitest",
		"test:watch": "vitest watch",
		"test:vitest": "vitest run --coverage"
	},
	"lint-staged": {
		"*.{js,ts?(x)}": [
			"prettier --ignore-path=.gitignore --ignore-path=.prettierignore --write",
			"eslint --fix --color"
		],
		"*.{md,json,y?(a)ml}": [
			"prettier --ignore-path=.gitignore --ignore-path=.prettierignore --write"
		]
	},
	"msw": {
		"workerDirectory": "public"
	},
	"dependencies": {
		"@radix-ui/react-slot": "1.0.2",
		"@radix-ui/react-toolbar": "1.0.4",
		"@stitches/react": "1.2.8",
		"class-variance-authority": "0.7.0",
		"clsx": "2.0.0",
		"ky": "1.1.3",
		"lucide-react": "0.292.0",
		"next": "14.0.2",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-error-boundary": "4.0.11",
		"react-icons": "4.11.0",
		"swr": "2.2.4",
		"tailwind-merge": "1.14.0",
		"tailwindcss-animate": "1.0.7"
	},
	"devDependencies": {
		"@next/eslint-plugin-next": "14.0.2",
		"@testing-library/jest-dom": "6.1.4",
		"@testing-library/react": "14.1.0",
		"@types/node": "20.9.0",
		"@types/react": "18.2.37",
		"@types/react-dom": "18.2.15",
		"@typescript-eslint/eslint-plugin": "6.10.0",
		"@typescript-eslint/parser": "6.10.0",
		"@vitejs/plugin-react": "4.1.1",
		"@vitest/coverage-v8": "0.34.6",
		"autoprefixer": "10.4.16",
		"cssnano": "6.0.1",
		"eslint": "8.53.0",
		"eslint-config-prettier": "9.0.0",
		"eslint-import-resolver-typescript": "3.6.1",
		"eslint-plugin-jsx-a11y": "6.8.0",
		"eslint-plugin-react": "7.33.2",
		"eslint-plugin-react-hooks": "4.6.0",
		"happy-dom": "12.10.3",
		"husky": "8.0.3",
		"is-ci": "3.0.1",
		"lint-staged": "15.1.0",
		"msw": "1.3.2",
		"npm-run-all": "4.1.5",
		"postcss": "8.4.31",
		"prettier": "3.1.0",
		"prettier-plugin-organize-imports": "^3.2.3",
		"rimraf": "5.0.5",
		"tailwindcss": "3.3.5",
		"typescript": "5.2.2",
		"vitest": "0.34.6"
	}
}
