{
	"name": "portfolio",
	"version": "1.0.0",
	"description": "My portfolio with Next.js using TypeScript.",
	"license": "MIT",
	"private": true,
	"author": {
		"name": "roottool",
		"url": "https://github.com/roottool"
	},
	"homepage": "https://roottool.vercel.app",
	"repository": {
		"type": "git",
		"url": "https://github.com/roottool/portfolio.git"
	},
	"bugs": {
		"url": "https://github.com/roottool/portfolio/issues"
	},
	"scripts": {
		"prepare": "is-ci || husky",
		"clean": "rimraf .next .swc",
		"dev": "next dev",
		"build": "npm-run-all clean --parallel build:*",
		"build:next": "next build",
		"start": "next start",
		"lint": "run-s -c lint:*",
		"lint:prettier": "prettier --check .",
		"lint:eslint": "eslint --config eslint.config.mjs --color --max-warnings=0 .",
		"format": "prettier --cache --write .",
		"fix": "run-s -c fix:* format",
		"fix:eslint": "eslint --config eslint.config.mjs --color --cache --fix .",
		"typecheck": "tsc --noEmit",
		"test": "run-s -c test:vitest",
		"test:watch": "vitest watch",
		"test:vitest": "vitest run --coverage"
	},
	"lint-staged": {
		"*.{js,ts?(x)}": [
			"eslint --config eslint.config.mjs --color --fix",
			"prettier --write"
		],
		"*.{md,json,y?(a)ml}": [
			"prettier --write"
		]
	},
	"msw": {
		"workerDirectory": "public"
	},
	"engines": {
		"node": "^20.13.1"
	},
	"packageManager": "pnpm@9.12.3",
	"dependencies": {
		"@radix-ui/react-slot": "1.1.0",
		"@radix-ui/react-toolbar": "1.1.0",
		"@stitches/react": "1.2.8",
		"class-variance-authority": "0.7.0",
		"clsx": "2.1.1",
		"ky": "1.7.2",
		"next": "15.0.3",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"react-error-boundary": "4.1.2",
		"react-icons": "5.3.0",
		"swr": "2.2.5",
		"tailwind-merge": "2.5.4",
		"tailwindcss-animate": "1.0.7",
		"valibot": "0.42.1"
	},
	"devDependencies": {
		"@next/env": "15.0.3",
		"@next/eslint-plugin-next": "15.0.3",
		"@testing-library/jest-dom": "6.6.3",
		"@testing-library/react": "16.0.1",
		"@trivago/prettier-plugin-sort-imports": "4.3.0",
		"@types/node": "22.9.0",
		"@types/react": "18.3.12",
		"@types/react-dom": "18.3.1",
		"@vitejs/plugin-react": "4.3.3",
		"@vitest/coverage-v8": "2.1.4",
		"autoprefixer": "10.4.20",
		"cssnano": "7.0.6",
		"eslint": "9.14.0",
		"eslint-config-flat-gitignore": "0.3.0",
		"eslint-import-resolver-typescript": "3.6.3",
		"eslint-plugin-jsx-a11y": "6.10.2",
		"eslint-plugin-react": "7.37.2",
		"eslint-plugin-react-hooks": "5.0.0",
		"eslint-plugin-unused-imports": "4.1.4",
		"globals": "15.12.0",
		"happy-dom": "15.11.0",
		"husky": "9.1.6",
		"is-ci": "3.0.1",
		"lint-staged": "15.2.10",
		"msw": "2.6.4",
		"npm-run-all2": "7.0.1",
		"postcss": "8.4.48",
		"prettier": "3.3.3",
		"rimraf": "6.0.1",
		"tailwindcss": "3.4.14",
		"typescript": "5.6.3",
		"typescript-eslint": "8.14.0",
		"vitest": "2.1.4"
	}
}
