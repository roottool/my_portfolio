{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    "helpers:pinGitHubActionDigests"
  ],
  "assignees": ["@roottool"],
  "labels": ["dependencies"],
  "timezone": "Asia/Tokyo",
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ]
  },
  "packageRules": [
    {
      "matchPackagePatterns": [
        "eslint"
      ],
      "groupName": "ESLint",
      "automerge": true
    },
    {
      "matchPackagePrefixes": [
        "@types/"
      ],
      "groupName": "Type definitions",
      "automerge": true
    },
    {
      "matchPackagePrefixes": [
        "prettier"
      ],
      "groupName": "Prettier",
      "automerge": true
    }
  ]
}
