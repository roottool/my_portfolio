{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		":dependencyDashboard",
		":semanticPrefixFixDepsChoreOthers",
		":ignoreModulesAndTests",
		":autodetectPinVersions",
		":prHourlyLimit4",
		":prConcurrentLimit10",
		"group:monorepos",
		"group:recommended",
		"schedule:daily",
		"workarounds:all",
		"helpers:pinGitHubActionDigests"
	],
	"labels": ["dependencies"],
	"timezone": "Asia/Tokyo",
	"vulnerabilityAlerts": {
		"labels": ["security"]
	},
	"packageRules": [
		{
			"groupName": "all non-major devDependencies",
			"groupSlug": "all-devDependencies-minor-patch-pin-digest",
			"matchPackagePatterns": ["*"],
			"matchUpdateTypes": ["minor", "patch", "pin", "digest"],
			"automerge": true
		},
		{
			"groupName": "all non-major dependencies",
			"groupSlug": "all-dependencies-minor-patch-pin-digest",
			"matchDepTypes": ["dependencies"],
			"matchPackagePatterns": ["*"],
			"matchUpdateTypes": ["minor", "patch", "pin", "digest"],
			"automerge": true
		},
		{
			"groupName": "Type definitions Group",
			"matchPackagePrefixes": ["@types/"],
			"automerge": true
		},
		{
			"groupName": "Testing Library Group",
			"matchPackagePrefixes": ["@testing-library/"],
			"automerge": true
		},
		{
			"groupName": "Vitest Group",
			"matchPackageNames": ["vitest"],
			"matchPackagePatterns": ["@vitejs/", "@vitest/"],
			"automerge": true
		},
		{
			"groupName": "ESLint Group",
			"matchPackagePatterns": ["eslint"],
			"automerge": true
		},
		{
			"groupName": "Next.js Group",
			"matchPackageNames": ["next"],
			"matchPackagePrefixes": ["@next/"],
			"automerge": true
		},
		{
			"groupName": "React Group",
			"matchPackageNames": ["@types/react", "@types/react-dom"],
			"matchPackagePrefixes": ["react"],
			"automerge": true
		}
	]
}
